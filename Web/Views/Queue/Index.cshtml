@model List<string>

@{
	ViewBag.Title = "Queue Messages";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count <= 0) {
	<p>Queue is empty</p>
} else {
	<ul>
		@foreach (string message in Model) {
			<li>@message</li>
		}
	</ul>
}

@using (Html.BeginForm("NewMessage", "Queue")) {
	<input type="text" name="Content" placeholder="Content" />
	<input type="submit" value="Add to Queue" />
}
